add_header X-Frame-Options SAMEORIGIN;
add_header X-Content-Type-Options nosniff;
add_header X-XSS-Protection "1; mode=block";

upstream basic-webinar {
{% if whichcert == "letsencrypt" or whichcert == "owncert" %}
    server {{ domain_name }}:5000;
{% else %}
    server {{ aws_public_ip }}:5000;
{% endif %}
}

upstream classroom {
{% if whichcert == "letsencrypt" or whichcert == "owncert" %}
    server {{ domain_name }}:5001; 
{% else %}
    server {{ aws_public_ip }}:5001;
{% endif %}
}

server {
    listen 80 default_server;
{% if whichcert == "letsencrypt" or whichcert == "owncert" %}
    server_name {{ domain_name }};
{% else %}
    server_name {{ aws_public_ip }};
{% endif %}

{% if whichcert == "letsencrypt" %}
    location /.well-known/acme-challenge {
        root /var/www/html;
        try_files $uri $uri/ =404;
    }
{% endif %}

    location / {
{% if whichcert == "letsencrypt" or whichcert == "owncert" %}
        rewrite ^ https://{{ domain_name }}$request_uri? permanent;
{% else %}
        rewrite ^ https://{{ aws_public_ip }}$request_uri? permanent;
{% endif %}        
    }
}

server {
    listen 443 ssl default deferred;
{% if whichcert == "letsencrypt" or whichcert == "owncert" %}
    server_name {{ domain_name }};
{% else %}
    server_name {{ aws_public_ip }};
{% endif %}

    ssl on;
{% if whichcert == "letsencrypt" %}
    ssl_certificate         /etc/letsencrypt/live/{{ domain_name }}/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/{{ domain_name }}/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/{{ domain_name }}/fullchain.pem;
{% else %}
    ssl_certificate /etc/nginx/ssl/nginx.crt;
    ssl_certificate_key /etc/nginx/ssl/nginx.key;
{% endif %}

    ssl_session_cache shared:SSL:50m;
    ssl_session_timeout 5m;
    ssl_stapling on;
    ssl_stapling_verify on;

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers "ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA:ECDHE-RSA-AES128-SHA:DHE-RSA-AES256-SHA256:DHE-RSA-AES128-SHA256:DHE-RSA-AES256-SHA:DHE-RSA-AES128-SHA:ECDHE-RSA-DES-CBC3-SHA:EDH-RSA-DES-CBC3-SHA:AES256-GCM-SHA384:AES128-GCM-SHA256:AES256-SHA256:AES128-SHA256:AES256-SHA:AES128-SHA:DES-CBC3-SHA:HIGH:!aNULL:!eNULL:!EXPORT:!DES:!MD5:!PSK:!RC4";

    ssl_prefer_server_ciphers on;

    include sites-available/proxy.conf;

    root /var/www/html;

    location /basic-webinar {
        rewrite /basic-webinar(.*) /$1 break;
        proxy_pass https://basic-webinar;
    }

    location /classroom {
	rewrite /classroom(.*) /$1 break;
        proxy_pass https://classroom;
    }

}
